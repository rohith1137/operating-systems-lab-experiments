#include <stdio.h>

struct block {
    int data;
    int next;
};

int main() {
    struct block b[10];
    int n, i;

    printf("Enter number of blocks: ");
    scanf("%d", &n);

    printf("Enter block numbers:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &b[i].data);
        if (i < n - 1)
            b[i].next = i + 1;
        else
            b[i].next = -1;
    }

    printf("\nLinked Allocation:\n");
    i = 0;
    while (i != -1) {
        printf("%d -> ", b[i].data);
        i = b[i].next;
    }
    printf("NULL\n");

    return 0;
}
