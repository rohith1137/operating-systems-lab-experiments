#include <stdio.h>
#include <stdlib.h>

int main() {
    int q[20], n, head, i, seek = 0, size;

    printf("Enter disk size: ");
    scanf("%d", &size);

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter disk requests:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &q[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    q[n] = head;
    q[n + 1] = size - 1;
    q[n + 2] = 0;
    n += 3;

    for (i = 0; i < n - 1; i++)
        for (int j = i + 1; j < n; j++)
            if (q[i] > q[j]) {
                int temp = q[i];
                q[i] = q[j];
                q[j] = temp;
            }

    for (i = 0; q[i] != head; i++);
    for (; i < n - 1; i++)
        seek += abs(q[i + 1] - q[i]);

    printf("Total seek time = %d\n", seek);
    return 0;
}
